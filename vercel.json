{
  "version": 2,
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "functions": {
    "server/index.ts": {
      "runtime": "@vercel/node",
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": ["server/**"]
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/index.html"
    }
  ]
}
